{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["es6"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "rootDir": "src",
        "baseUrl": "./src",
        "paths": {
            "@config": ["config"],
            "@shared": ["shared"],
            "@routes": ["routes"],
            "@middlewares": ["middlewares"],
            "@services": ["services"],
            "@models": ["models"]
        },
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "logs", "build", "test"],
    "include": ["src", "src/**/*.test.js"]
}
